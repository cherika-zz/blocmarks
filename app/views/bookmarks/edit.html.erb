<h1>Edit Bookmark</h1>

<div class="row">
   <div class="col-md-8">
     <%= form_for [@topic, @bookmark], method: 'patch' do |f| %>
       <div class="form-group">
         <%= f.label :url %>
         <%= f.text_field :url, class: 'form-control', placeholder: "Enter new url"  %>
       </div>

       <%= f.submit "Save", class: 'btn btn-success' %>
     <% end %>
   </div>
 </div>
